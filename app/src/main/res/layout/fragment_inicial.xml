<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.inicial.InicialFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewInicial"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="8dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewPhoneIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_baseline_smartphone"
                app:layout_constraintEnd_toStartOf="@+id/imageViewConexaoI"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewPhoneIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="IP Phone"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewPhoneIp"
                app:layout_constraintStart_toStartOf="@+id/imageViewPhoneIp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewPhoneIp" />

            <ImageView
                android:id="@+id/imageViewConexaoI"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="14dp"
                android:src="@drawable/ic_baseline_circle_intermediate"
                app:layout_constraintEnd_toStartOf="@+id/imageViewNetworkIp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewPhoneIp"
                app:layout_constraintTop_toTopOf="@+id/imageViewPhoneIp" />

            <ImageView
                android:id="@+id/imageViewNetworkIp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_baseline_cell_tower"
                app:layout_constraintEnd_toStartOf="@+id/imageViewConexaoII"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewConexaoI"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewNetworkIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="IP Dados Moveis"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewNetworkIp"
                app:layout_constraintStart_toStartOf="@+id/imageViewNetworkIp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewNetworkIp" />

            <ImageView
                android:id="@+id/imageViewConexaoII"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_baseline_circle_intermediate"
                app:layout_constraintEnd_toStartOf="@+id/imageViewInternetIp"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewNetworkIp"
                app:layout_constraintTop_toTopOf="@+id/imageViewNetworkIp" />

            <ImageView
                android:id="@+id/imageViewInternetIp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:src="@drawable/ic_baseline_network_ip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imageViewConexaoII"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textViewInternetIp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="IP Networking"
                android:textAlignment="center"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/imageViewInternetIp"
                app:layout_constraintStart_toStartOf="@+id/imageViewInternetIp"
                app:layout_constraintTop_toBottomOf="@+id/imageViewInternetIp" />

            <TextView
                android:id="@+id/textViewNomeDoServidor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:width="2dp"
                android:color="@color/black"
                android:elevation="5dp"
                android:background="@drawable/myreact"
                android:outlineProvider="none"
                android:padding="2dp"
                android:text="Nome do servidor conectado"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewNetworkIp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>